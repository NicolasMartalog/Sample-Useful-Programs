#include <iostream>

using namespace std;

int main()
{
    double f, c;
    char choice;

    cout << "Welcome to my world famous Farehnheit to Celcius converter" << endl;
    do {
            cout << "enter a temperature in farenheit\n";
            cin >> f;
            c = 5.0/9.0* (f-32);
            cout << f << " degrees farenheit is "<<c<<" degrees Celcius\n\n";
            cout << "Do you want to enter another? (Y or N)\n";
            cin >> choice;
            cout << endl;


    }while(choice == 'y' || choice == 'Y');


    return 0;
}
